{
  "publisher": "your-username",
  "name": "pkg-name",
  "displayName": "pkg-name",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "这是一个 VS Code 扩展的模板项目，使用 Vue 3 + TypeScript + reactive-vscode 构建",
  "author": "Your Name <your.email@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pkg-name"
  },
  "bugs": {
    "url": "https://github.com/your-username/pkg-name/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "PkgName.showHelloWorld",
        "title": "Hello World (Vue): Show"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "pkg-name",
      "properties": {}
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "PkgName",
          "title": "pkg-name",
          "icon": "res/icon.svg"
        }
      ]
    },
    "views": {
      "PkgName": [
        {
          "id": "PkgName.basic",
          "name": "pkg name configurator",
          "icon": "res/icon.svg",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "npm-run-all --parallel dev:webview dev:plugin",
    "dev:webview": "pnpm --filter webview-ui dev",
    "dev:plugin": "nr build --watch --sourcemap",
    "update": "vscode-ext-gen --output src/generated-meta.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:webview": "pnpm --filter webview-ui typecheck",
    "typecheck:all": "run-p typecheck typecheck:webview",
    "vscode:prepublish": "nr build",
    "release": "bumpp",
    "ext:package": "vsce package --no-dependencies",
    "ext:publish": "vsxpub --no-dependencies",
    "clean": "rimraf dist webview-ui/dist",
    "dev:start": "./scripts/dev.sh",
    "build:full": "./scripts/build.sh"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "esno": "^4.8.0",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.10.5",
    "pnpm": "^10.4.1",
    "reactive-vscode": "^0.2.10",
    "rimraf": "^6.0.1",
    "tsdown": "^0.9.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vscode-ext-gen": "^1.0.0",
    "vsxpub": "^0.1.0"
  }
}
